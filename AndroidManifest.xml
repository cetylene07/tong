<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hb.app.tong"
    android:versionCode="300"
    android:versionName="3.0" >

    <!-- 안드로이드 지원버전  최소 : 4.0.3 타겟 : 4.0.4 최대 : 5.0 -->
    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="15"
        android:targetSdkVersion="16" />

    <!-- 퍼미션을 설정하는 곳 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.hb.app.tong.TongActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.SAMPLE_CODE" />
        </intent-filter>
        <!-- </activity> -->
        <activity
            android:name="com.hb.app.tong.PrefActivity"
            android:label="@string/title_activity_preference" >
        </activity>
        <activity
            android:name="com.hb.app.tong.SetPreferenceActivity"
            android:label="@string/title_activity_set_preference" >
        </activity>
    </application>

</manifest>